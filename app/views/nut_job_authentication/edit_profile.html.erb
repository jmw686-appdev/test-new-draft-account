<div >
  <h5>
    Edit Nut Job Account
  </h5>

  <div>
    <form action="/modify_nut_job" method="post">
      <div>
        <label for="email_box">Email</label>
        <input id="email_box" name="query_email" value="<%= @current_nut_job.email %>">
      </div>
      <div>
        <label for="password_box">Password</label>
        <input id="password_box" name="query_password" value="<%= @current_nut_job.password %>">
      </div>
      <div>
        <label for="crazy_box">Crazy</label>
        <input id="crazy_box" name="query_crazy" value="<%= @current_nut_job.crazy %>">
      </div>

      <div>
        <label for="password_box">Password</label>
        <input id="password_box" name="query_password" placeholder="Choose a password..." type="password">
      </div>
    
      <div>
        <label for="password_confirmation_box">Password Confirmation</label>
        <input id="password_confirmation_box" name="query_password_confirmation" placeholder="Confirm your password..." type="password">
      </div>

      <button>
        Update account
      </button>
    </form>
  </div>
</div>
